{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "next.config.ts",
    "app/**/*.{ts,tsx}",
    "scripts/**/*.{js,ts}",
    "mdx-components.tsx"
  ],
  "project": ["**/*.{ts,tsx,js,jsx,mjs}"],
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    ".next/**",
    "out/**",
    "node_modules/**",
    ".open-next/**"
  ],
  "ignoreDependencies": ["@types/*"],
  "next": {
    "entry": ["next.config.ts"]
  }
}
