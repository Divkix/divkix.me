{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["app/**/*.{ts,tsx}", "scripts/**/*.{js,ts}"],
  "project": ["**/*.{ts,tsx,js,jsx,mjs}"],
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    ".next/**",
    "out/**",
    "node_modules/**",
    ".open-next/**",
    "mdx-components.tsx"
  ],
  "ignoreDependencies": ["tw-animate-css"],
  "next": {
    "entry": ["next.config.ts"]
  }
}
