{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Modern portfolio site with Next.js 16, TypeScript, and React Three Fiber",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/divkix/portfolio.git"
  },
  "author": "Divanshu Chauhan <divkix@divkix.me>",
  "license": "MIT",
  "browserslist": [
    "chrome >= 92",
    "edge >= 92",
    "firefox >= 90",
    "safari >= 15",
    "not IE 11",
    "not dead"
  ],
  "scripts": {
    "dev": "next dev --webpack",
    "prebuild": "node scripts/generate-posts-metadata.js && node scripts/generate-rss.js && node scripts/generate-og-images.js",
    "build": "bun run prebuild && next build --webpack",
    "preview": "bun run build && bunx serve out",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "type-check": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false",
    "check": "biome check",
    "knip": "knip"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "16.0.6",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/typography": "^0.5.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.555.0",
    "next": "16.0.6",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.67.0",
    "react-icons": "^5.5.0",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "knip": "^5.71.0",
    "png-to-ico": "^3.0.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3"
  }
