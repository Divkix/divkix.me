---
import "@/styles/globals.css";
import "@fontsource-variable/inter";
import "@fontsource-variable/space-grotesk";
import { ClientRouter } from "astro:transitions";
import { Toaster } from "@/components/shared/Toaster";
import { siteConfig } from "@/data/site.config";
import { generatePersonSchema, generateWebSiteSchema } from "@/lib/schema";
import { baseUrl } from "@/lib/seo";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = `${siteConfig.name} (${siteConfig.handle.toLowerCase()}) | Software Engineer & AI Developer`,
  description = siteConfig.seo?.metaDescription || siteConfig.about,
  ogImage = `${baseUrl}/og-image.png`,
  canonical = baseUrl,
} = Astro.props;

const personSchema = generatePersonSchema();
const websiteSchema = generateWebSiteSchema();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content={siteConfig.name} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    <meta property="twitter:image:alt" content={title} />
    <meta property="twitter:creator" content="@divkix" />
    <meta property="twitter:site" content="@divkix" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Sitemap & RSS Discovery -->
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" title={`${siteConfig.name}'s Blog`} href="/rss.xml" />

    <!-- Identity Verification (rel="me") -->
    {siteConfig.socials
      .filter((s) => s.label !== "Email")
      .map((social) => (
        <link rel="me" href={social.href} />
      ))
    }

    <!-- Author -->
    <meta name="author" content={siteConfig.name} />

    <!-- Preconnect hints -->
    <link rel="preconnect" href="https://analytics.divkix.me" crossorigin />

    <!-- View Transitions -->
    <ClientRouter />

    <!-- Theme Script -->
    <script is:inline>
      // Get theme from localStorage or system preference
      function getThemePreference() {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      }

      // Apply theme to document
      function applyTheme(doc = document) {
        const theme = getThemePreference();
        if (theme === 'dark') {
          doc.documentElement.classList.add('dark');
        } else {
          doc.documentElement.classList.remove('dark');
        }
      }

      // Apply theme on initial load
      applyTheme();

      // Sync theme changes to localStorage via MutationObserver
      if (typeof localStorage !== 'undefined') {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains('dark');
          localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });
        observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
      }

      // Apply theme to incoming document BEFORE swap (prevents flash)
      document.addEventListener('astro:before-swap', (event) => {
        const theme = getThemePreference();
        if (theme === 'dark') {
          event.newDocument.documentElement.classList.add('dark');
        } else {
          event.newDocument.documentElement.classList.remove('dark');
        }
      });

      // Fallback: reapply theme after swap completes
      document.addEventListener('astro:after-swap', () => {
        applyTheme();
      });
    </script>

    <!-- JSON-LD Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(personSchema)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    <!-- Analytics -->
    <script
      is:inline
      async
      src="https://analytics.divkix.me/s.js"
      data-website-id="c27cdff0-16e4-49c7-b4c8-6b229ef3fd83"
    ></script>
  </head>
  <body>
    <!-- Aurora Background Effect -->
    <div class="aurora-background"></div>
    <div class="aurora-noise"></div>

    <!-- Page Content -->
    <slot />

    <!-- Toast Notifications -->
    <Toaster client:idle />
  </body>
</html>
