---
interface Props {
  takeaways: string[];
}

const { takeaways } = Astro.props;

if (!takeaways || takeaways.length === 0) {
  return null;
}
---

<div class="key-takeaways rounded-lg border border-border bg-card text-card-foreground shadow-sm fade-in-delayed">
  <div class="flex flex-col space-y-1.5 p-6 pb-2">
    <h3 class="text-lg font-semibold leading-none tracking-tight flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-primary"
      >
        <path d="m3 17 2 2 4-4" />
        <path d="m3 7 2 2 4-4" />
        <path d="M13 6h8" />
        <path d="M13 12h8" />
        <path d="M13 18h8" />
      </svg>
      Key Takeaways
    </h3>
  </div>
  <div class="p-6 pt-0">
    <ul class="space-y-3">
      {takeaways.map((item, index) => (
        <li class="flex gap-3 stagger-item" style={`animation-delay: ${index * 0.1}s`}>
          <span class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-primary/10 text-xs font-semibold text-primary">
            {index + 1}
          </span>
          <span class="text-foreground/80">{item}</span>
        </li>
      ))}
    </ul>
  </div>
</div>

<style>
  .fade-in-delayed {
    animation: fade-in 0.4s ease-out 0.1s backwards;
  }

  .stagger-item {
    opacity: 0;
    animation: stagger-fade-in 0.4s ease-out forwards;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes stagger-fade-in {
    from {
      opacity: 0;
      transform: translateX(-12px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
