---
import { siteConfig } from "@/data/site.config";
---

<section id="experience" class="container mx-auto px-4 py-20">
  <div class="space-y-12">
    <div class="text-center space-y-4 section-header">
      <h2 class="text-4xl font-display font-bold">Experience</h2>
    </div>

    <div class="max-w-4xl mx-auto space-y-8">
      <!-- Education -->
      <div class="space-y-4">
        <h3 class="text-2xl font-display font-semibold">Education</h3>
        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-2 top-8 bottom-0 w-0.5 bg-primary/30 timeline-line"></div>

          {siteConfig.education.map((edu, index) => (
            <div class="relative timeline-item" style={`animation-delay: ${index * 0.15}s`}>
              <!-- Timeline node -->
              <div class="absolute left-0 top-6 timeline-node" style={`animation-delay: ${index * 0.15}s`}>
                <div class={`w-4 h-4 rounded-full border-2 border-primary bg-background ${index === 0 ? 'bg-primary' : ''}`}>
                  <div class="absolute inset-0 rounded-full border-2 border-primary timeline-pulse" style={`animation-delay: ${index * 0.15}s`}></div>
                </div>
              </div>

              <div class="pl-10 mb-6">
                <div class="glass-surface rounded-lg border border-border bg-card text-card-foreground shadow-sm">
                  <div class="flex flex-col space-y-1.5 p-6">
                    <div class="flex justify-between items-start">
                      <h3 class="text-lg font-semibold leading-none tracking-tight">{edu.title}</h3>
                      <span class="text-sm text-foreground/60">{edu.year}</span>
                    </div>
                  </div>
                  {("focus" in edu || "honors" in edu) && (
                    <div class="p-6 pt-0">
                      <p class="text-sm text-foreground/60">
                        {"focus" in edu ? edu.focus : "honors" in edu ? edu.honors : ""}
                      </p>
                    </div>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Work Experience -->
      <div class="space-y-6">
        <h3 class="text-2xl font-display font-semibold">Work</h3>

        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-2 top-8 bottom-0 w-0.5 bg-primary/30 timeline-line"></div>

          {siteConfig.experience.map((company, companyIndex) => (
            <div class="relative timeline-item" style={`animation-delay: ${companyIndex * 0.15}s`}>
              <!-- Timeline node -->
              <div class="absolute left-0 top-6 timeline-node" style={`animation-delay: ${companyIndex * 0.15}s`}>
                <div class={`w-4 h-4 rounded-full border-2 border-primary bg-background ${companyIndex === 0 ? 'bg-primary' : ''}`}>
                  <div class="absolute inset-0 rounded-full border-2 border-primary timeline-pulse" style={`animation-delay: ${companyIndex * 0.15}s`}></div>
                </div>
              </div>

              <div class="pl-10 mb-8">
                <div class="glass-surface rounded-lg border border-border bg-card text-card-foreground shadow-sm">
                  <div class="flex flex-col space-y-1.5 p-6">
                    <div class="space-y-2">
                      <div class="flex justify-between items-start gap-4">
                        <h3 class="text-xl font-semibold leading-none tracking-tight">
                          {company.company}
                        </h3>
                        <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 shrink-0">
                          {company.duration}
                        </span>
                      </div>
                      <div class="flex items-center gap-2 text-sm text-foreground/60">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z" />
                          <circle cx="12" cy="10" r="3" />
                        </svg>
                        {company.location}
                      </div>
                    </div>
                  </div>
                  <div class="p-6 pt-0">
                    <div class="space-y-6 relative">
                      <!-- Timeline connector for positions -->
                      {company.positions.length > 1 && (
                        <div class="absolute left-2 top-8 bottom-8 w-0.5 bg-border"></div>
                      )}

                      {company.positions.map((position) => (
                        <div class="relative pl-8">
                          <!-- Timeline dot for positions -->
                          {company.positions.length > 1 && (
                            <div class="absolute left-0 top-2 h-4 w-4 rounded-full border-2 border-primary bg-background"></div>
                          )}

                          <div class="space-y-3">
                            <div class="flex justify-between items-start gap-4">
                              <h4 class="font-semibold text-foreground">
                                {position.title}
                              </h4>
                              <span class="text-sm text-foreground/60 shrink-0">
                                {position.year}
                              </span>
                            </div>
                            <ul class="space-y-2 text-sm text-foreground/70">
                              {position.highlights.map((highlight) => (
                                <li class="flex gap-2">
                                  <span class="text-primary mt-1.5">â€¢</span>
                                  <span>{highlight}</span>
                                </li>
                              ))}
                            </ul>
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section-header {
    opacity: 0;
    animation: fade-in-up 0.5s ease-out forwards;
  }

  .timeline-item {
    opacity: 0;
    animation: fade-in-up 0.5s ease-out forwards;
  }

  .timeline-node {
    opacity: 0;
    transform: scale(0);
    animation: timeline-node-appear 0.4s ease-out forwards;
  }

  .timeline-pulse {
    animation: timeline-pulse 2s ease-in-out infinite;
  }

  .timeline-line {
    transform: scaleY(0);
    transform-origin: top;
    animation: timeline-line-grow 1.5s ease-out forwards;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes timeline-node-appear {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes timeline-pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.8;
    }
    50% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  @keyframes timeline-line-grow {
    from {
      transform: scaleY(0);
    }
    to {
      transform: scaleY(1);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .section-header,
    .timeline-item,
    .timeline-node,
    .timeline-pulse,
    .timeline-line {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
