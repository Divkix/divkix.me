---
import { siteConfig } from "@/data/site.config";
import SocialIcons from "./SocialIcons.astro";

const footerLinks = [
  { label: "About", href: "/about" },
  { label: "Blog", href: "/blog" },
  { label: "Connect", href: "/socials" },
  { label: "Privacy", href: "/privacy" },
];

const currentYear = new Date().getFullYear();
---

<footer class="border-t">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <div class="flex flex-col items-center gap-4 md:flex-row md:gap-6">
        <p class="text-sm text-foreground/60">
          © {currentYear} {siteConfig.name}. All rights reserved.
        </p>
        <span class="text-sm text-foreground/40">•</span>
        <a
          href="https://github.com/divkix/divkix.me"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-foreground/60 hover:text-foreground transition-colors"
        >
          Open Source
        </a>
        <nav class="flex items-center gap-4">
          {footerLinks.map((link) => (
            <a
              href={link.href}
              class="text-sm text-foreground/60 hover:text-foreground transition-colors"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>
      <SocialIcons size="sm" />
    </div>
  </div>
</footer>
